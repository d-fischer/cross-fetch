{
  "name": "@d-fischer/cross-fetch",
  "version": "4.0.0",
  "description": "Universal WHATWG Fetch API for Node, Browsers and React Native",
  "homepage": "https://github.com/d-fischer/cross-fetch",
  "main": "dist/node-ponyfill.js",
  "browser": "dist/browser-ponyfill.js",
  "exports": {
    ".": {
      "require": "./dist/node-ponyfill.js",
      "import": "./dist/node-ponyfill.mjs"
    },
    "./polyfill": {
      "require": "./dist/node-polyfill.js",
      "import": "./dist/node-polyfill.js"
    }
  },
  "sideEffects": ["./dist/node-polyfill.js"],
  "react-native": "dist/react-native-ponyfill.js",
  "typings": "index.d.ts",
  "lint-staged": {
    "*.js": [
      "standard --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "make build && make check-dependencies && lint-staged"
    }
  },
  "standard": {
    "env": [
      "mocha",
      "browser"
    ],
    "globals": [
      "expect",
      "assert",
      "chai",
      "sinon"
    ],
    "ignore": [
      "/dist/",
      "bundle.js",
      "bundle.*.js"
    ]
  },
  "nyc": {
    "temp-dir": ".reports/.coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/d-fischer/cross-fetch.git"
  },
  "author": "Daniel Fischer <daniel@d-fischer.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/d-fischer/cross-fetch/issues"
  },
  "dependencies": {
    "node-fetch": "2.6.0",
    "whatwg-fetch": "3.0.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "codecov": "3.6.5",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "mocha": "7.1.0",
    "mocha-headless-chrome": "2.0.1",
    "nock": "12.0.2",
    "nyc": "15.0.0",
    "ora": "4.0.3",
    "rollup": "2.0.2",
    "rollup-plugin-copy": "3.3.0",
    "rollup-plugin-uglify": "6.0.4",
    "semver": "7.1.3",
    "sinon": "9.0.0",
    "standard": "14.3.1",
    "webpack": "4.42.0",
    "webpack-cli": "3.3.11"
  },
  "files": [
    "dist",
    "polyfill",
    "index.d.ts"
  ],
  "keywords": [
    "fetch",
    "isomorphic",
    "universal",
    "node",
    "react",
    "native",
    "browser",
    "ponyfill",
    "whatwg",
    "xhr",
    "ajax"
  ]
}
